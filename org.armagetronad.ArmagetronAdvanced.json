{
    "app-id": "org.armagetronad.ArmagetronAdvanced",
    "branch": "experimental",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "20.08",
    "sdk": "org.freedesktop.Sdk",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=x11",
        "--share=network",
        "--socket=pulseaudio"
    ],
    "command": "ArmagetronAdvanced",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/man",
        "/app/share/ArmagetronAdvanced/desktop",
        "/app/bin/protoc",
        "/app/lib/debug",
        "/lib/debug",
        "*.la", "*.a"
    ],
    "modules": [
        "shared-modules/glew/glew.json",
        "shared-modules/glu/glu-9.json",
        "boost.json",
        "protobuf.json",
        "ftgl.json",
        {
            "name": "armagetronad",
            "config-opts": [
                "--disable-etc",
                "--disable-games",
                "--disable-uninstall",
                "progname=ArmagetronAdvanced",
                "progtitle=Armagetron Experimental",
                "ARMAGETRONAD_FAKERELEASE=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://sourceforge.net/projects/armagetronad/files/snapshots/2020/0.4.0_alpha_z4910/armagetronad-experimental-0.4.0_alpha_z4910.tbz",
                    "sha256": "a4925c775da7624eeb1ff9c248ac1ccf90f591286c65132d07d1d54c8ce0b9f2"
                },
                {
                    "type": "shell",
                    "commands": [
                        "test -r configure || ./bootstrap.sh",
                        "sed -i batch/sysinstall.in -e 's,install_link ,install ,g'",
                        "sed -i batch/sysinstall.in -e 's,if test -z \"${DESTDIR}\"; then,if false; then,'",
                        ""
                     ]
                }
            ],
            "post-install": [
                "echo FLATPAK_DEST=${FLATPAK_DEST}",
                "sed -i ${FLATPAK_DEST}/share/appdata/*.xml -e 's,x-flatpak-,,g' -e 's,\\.desktop</id>,</id>,'",
                "#rm -f ${FLATPAK_DEST}/share/applications/*-handler.desktop",
                "desktop-file-edit --remove-key=Path ${FLATPAK_DEST}/share/applications/org.armagetronad.ArmagetronAdvanced.desktop",
                "desktop-file-edit --remove-key=Terminal ${FLATPAK_DEST}/share/applications/org.armagetronad.ArmagetronAdvanced.desktop",
                ""
            ]
        }
    ]
}
