{
    "app-id": "org.armagetronad.ArmagetronAdvanced",
    "runtime": "org.freedesktop.Platform",
    "branch": "legacy_0.2.9",
    "runtime-version": "20.08",
    "sdk": "org.freedesktop.Sdk",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=x11",
        "--share=network",
        "--socket=pulseaudio"
    ],
    "command": "ArmagetronAdvanced",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/man",
        "*.la", "*.a"
    ],
    "modules": [
        "shared-modules/glu/glu-9.json",
        "shared-modules/SDL/SDL-1.2.15.json",
        "shared-modules/SDL/SDL_image-1.2.12.json",
        {
            "name": "armagetronad",
            "config-opts": [
                "--disable-etc",
                "--disable-games",
                "--disable-uninstall",
                "progname=ArmagetronAdvanced",
                "progtitle=Armagetron Alpha",
                "CXXFLAGS=-DUSER_DATA_DIR='\"$${XDG_DATA_HOME}/game\"' -DUSER_CONFIG_DIR='\"$${XDG_CONFIG_HOME}/game\"' -DAUTORESOURCE_DIR='\"$${XDG_CACHE_HOME}/resource\"'"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "/home/manuel/Tron/Develop/legacy_0.2.9/source",
                    "branch": "legacy_0.2.9_flatpak_fixes"
                },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": [
                        "sed -i batch/sysinstall.in -e 's,install_link ,install ,g'",
                        "./bootstrap.sh"
                    ]
                }
            ],
            "post-install": [
                "sed -i /app/share/appdata/*.xml -e 's,x-flatpak-,,g' -e 's,\\.desktop</id>,</id>,'",
                "desktop-file-edit --remove-key=Path /app/share/applications/*.desktop",
                "desktop-file-edit --remove-key=Terminal /app/share/applications/*.desktop",
                "rm -rf /app/share/ArmagetronAdvanced/desktop"
            ]
        }
    ]
}
