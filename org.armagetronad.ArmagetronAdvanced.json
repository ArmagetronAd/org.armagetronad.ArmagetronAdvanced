{
    "app-id": "org.armagetronad.ArmagetronAdvanced",
    "default-branch": "alpha",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "20.08",
    "sdk": "org.freedesktop.Sdk",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=x11",
        "--share=network",
        "--socket=pulseaudio"
    ],
    "command": "ArmagetronAdvanced",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/man",
        "/app/share/ArmagetronAdvanced/desktop",
        "*.la", "*.a"
    ],
    "modules": [
        "shared-modules/glu/glu-9.json",
        "shared-modules/SDL/SDL-1.2.15.json",
        "shared-modules/SDL/SDL_image-1.2.12.json",
        {
            "name": "armagetronad",
            "config-opts": [
                "--disable-etc",
                "--disable-games",
                "--disable-uninstall",
                "progname=ArmagetronAdvanced",
                "progtitle=Armagetron Alpha",
                "CXXFLAGS=-DUSER_DATA_DIR='\"$${XDG_DATA_HOME}/ArmagetronAdvanced\"' -DUSER_CONFIG_DIR='\"$${XDG_CONFIG_HOME}/ArmagetronAdvanced\"' -DAUTORESOURCE_DIR='\"$${XDG_CACHE_HOME}/ArmagetronAdvanced/resource\"'"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://sourceforge.net/projects/armagetronad/files/alpha/2020/0.2.9.2_alpha_z2417/armagetronad-alpha-0.2.9.2_alpha_z2417.tbz",
                    "sha256": "3a543c84bd47254592c7a21379f3db1e297f8f8981fa276e5fcfea8dbc4ff990"
                },
                {
                    "type": "shell",
                    "commands": [
                        "test -r configure || ./bootstrap.sh",
                        "sed -i batch/sysinstall.in -e 's,install_link ,install ,g'"
                     ]
                }
            ],
            "post-install": [
                "sed -i /app/share/appdata/*.xml -e 's,x-flatpak-,,g' -e 's,\\.desktop</id>,</id>,'",
                "desktop-file-edit --remove-key=Path /app/share/applications/*.desktop",
                "desktop-file-edit --remove-key=Terminal /app/share/applications/*.desktop"
            ]
        }
    ]
}
