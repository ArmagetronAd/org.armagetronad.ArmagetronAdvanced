{
    "app-id": "org.armagetronad.ArmagetronAdvanced",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "20.08",
    "sdk": "org.freedesktop.Sdk",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=x11",
        "--share=network",
        "--socket=pulseaudio"
    ],
    "command": "run.sh",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/man",
        "*.la", "*.a"
    ],
    "modules": [
        "shared-modules/glu/glu-9.json",
        "shared-modules/SDL/SDL-1.2.15.json",
        "shared-modules/SDL/SDL_image-1.2.12.json",
        {
            "name": "armagetronad",
            "rm-configure": true,
            "config-opts": [
                "--disable-games",
                "--disable-uninstall",
                "progname=org.armagetronad.ArmagetronAdvanced"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://launchpad.net/armagetronad/0.2.9/0.2.9.1.0/+download/armagetronad-0.2.9.1.0.tbz",
                    "sha256": "59b6c7c01ce3f8cca5437e33f974a637529541a11aa4f52c1a5c17499e26f6a1"
                },
                {
                    "type": "patch",
                    "path": "armagetronad-libpng-config.patch"
                },
                {
                    "type": "patch",
                    "path": "armagetronad-appdata.patch"
                },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": [
                        "autoreconf -vfi"
                    ]
                },
                {
                    "type": "script",
                    "dest-filename": "run.sh",
                    "commands": [
                        "mkdir -p \"${XDG_CONFIG_HOME}/game\"",
                        "test -r \"${XDG_CONFIG_HOME}/game/README.txt\" || echo > \"${XDG_CONFIG_HOME}/game/README.txt\" \"Custom configuration files for Armagetron Advanced go here.\"",
                        "org.armagetronad.ArmagetronAdvanced --userdatadir \"${XDG_DATA_HOME}/game\" --userconfigdir \"${XDG_CONFIG_HOME}/game\" --autoresourcedir \"${XDG_CACHE_HOME}/resource\" $*"
                    ]
                }
            ],
            "post-install": [
                "install -Dm755 run.sh /app/bin/run.sh",
                "sed -i /app/share/metainfo/*.appdata.xml -e 's,org.armagetronad.org.armagetronad,org.armagetronad,' -e 's,.desktop</id>,</id>,' -e 's,<!-- <launchable,<launchable,' -e 's,</launchable> -->,</launchable>,'",
                "install -Dm644 /app/share/metainfo/*.appdata.xml /app/share/appdata/org.armagetronad.ArmagetronAdvanced.appdata.xml",
                "desktop-file-edit --set-key=Exec --set-value='run.sh %f' /app/share/org.armagetronad.ArmagetronAdvanced/desktop/*.desktop",
                "desktop-file-edit --remove-key=Path /app/share/org.armagetronad.ArmagetronAdvanced/desktop/*.desktop",
                "desktop-file-edit --remove-key=Terminal /app/share/org.armagetronad.ArmagetronAdvanced/desktop/*.desktop",
                "install -Dm644 /app/share/org.armagetronad.ArmagetronAdvanced/desktop/*.desktop /app/share/applications/org.armagetronad.ArmagetronAdvanced.desktop",
                "install -Dm644 /app/share/org.armagetronad.ArmagetronAdvanced/desktop/icons/16x16/org.armagetronad.ArmagetronAdvanced.png /app/share/icons/hicolor/16x16/apps/org.armagetronad.ArmagetronAdvanced.png",
                "install -Dm644 /app/share/org.armagetronad.ArmagetronAdvanced/desktop/icons/32x32/org.armagetronad.ArmagetronAdvanced.png /app/share/icons/hicolor/32x32/apps/org.armagetronad.ArmagetronAdvanced.png",
                "install -Dm644 /app/share/org.armagetronad.ArmagetronAdvanced/desktop/icons/48x48/org.armagetronad.ArmagetronAdvanced.png /app/share/icons/hicolor/48x48/apps/org.armagetronad.ArmagetronAdvanced.png"
            ]
        }
    ]
}
